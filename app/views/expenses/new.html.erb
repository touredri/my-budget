<nav class="w-full flex justify-between items-center bg-AppBlue text-white h-10 px-3">
  <%= link_to @group do %>
    <i class="fa fa-arrow-left link-hover"></i>
  <% end %>
  <h1 class='font-ProximaBold font-medium'>New transaction</h1>
  <i class="fa fa-searc link-hover"></i>
</nav><br/>

<div class="flex flex-col pl-3">
  <%= form_with(model: @expense) do |form| %>
    <div class="field new-category">
      <%= form.text_field :name, placeholder: "Name" %>
    </div>
    <div class="field new-category">
      <%= form.number_field :amount,placeholder: "Amount"  %>
    </div>
    <%= form.hidden_field :group_id, value: @group.id %>
    <div class="submit w-full flex justify-center items-center py-3 px-6 font-ProximaBold">
      <%= form.submit %>
    </div>
    <% if @expense.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
        <ul>
          <% expense.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>
