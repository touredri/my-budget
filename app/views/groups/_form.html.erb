<%= form_with(model: group) do |form| %>

  <div class="flex flex-col p-3 bg-white w-1/2 text-black new-cat ">
    <%= form.label :icon %>
    <%= form.file_field :icon, accept:"image/png, image/gif, image/jpeg, image/svg, image/jpg" %>
  </div><br/>

  <div class="field w-1/2" style="display: block">
    <%= form.text_field :name, placeholder:"Title" %>
  </div>

  <br/>
  <div class="submit flex justify-center items-center py-3 px-6 font-ProximaBold">
    <%= form.submit %>
  </div>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>
      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
