<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <section class="w-full min-h-screen bg-AppWhite items-center fixed flex flex-col">
    <nav class="mb-4 w-full flex justify-between items-center bg-AppBlue text-white  h-12 px-1">
      <%= link_to :unauthenticated_root do %>
        <i class="fa fa-arrow-left link-hover"></i>
      <% end %>
      <h1 class='font-ProximaLight font-medium'>Register</h1>
      <div class="actions font-ProximaLight link-hover">
        <%= f.submit "Next" %>
      </div>
    </nav><br/>
    <div class="w-4/5 max-w-xs input-container px-2 mt-2 flex flex-col justify-between items-center">
        <div class="field placeholder:text-slate-400 border-gray-100 mb-3 rounded">
          <%= f.text_field :name, autofocus: true, placeholder:"Name" %>
        </div>
        <div class="field mb-3">
          <%= f.email_field :email, autofocus: true, placeholder:"Emails", autocomplete: "email", class:"peer placeholder:text-slate-400 w-full border-gray-100 invalid:border-pink-600 mb-5 rounded" %>
          <p class="invisible peer-invalid:visible text-red-600 text-xs italic">Please enter a valid email.</p>
        </div>
        <div class="field">
          <%= f.password_field :password, placeholder:"Password", class:"placeholder:text-slate-400 w-full border-gray-100 rounded" %>
        </div>
    </div>
    <br/>
    <%= render "error_messages", resource: resource %>
  </section>
<% end %>
